mytransform($d){
    -webkit-transform:$d;
    -moz-transform:$d;
    -ms-transform:$d;
    -o-transform:$d;
    transform:$d;
}
mytransition($d){
    -webkit-transition:$d;
    -moz-transition:$d;
    -ms-transition:$d;
    -o-transition:$d;
    transition:$d;
}
