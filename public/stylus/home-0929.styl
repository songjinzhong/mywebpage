#home{
    height: 100%;
    left: 0;
    position: fixed;
    text-align: center;
    top: 0;
    width: 100%;
    &:before{
        content: '';
        display: inline-block;
        height: 100%;
        margin-right: 0;
        vertical-align: middle;
        width: 1px;
    }
    & #flash{
        position:absolute;
        left:5px;
        top:5px;
        & a{
            cursor:pointer;
        }
        & #visit{
            display:block;
            opacity:0;
            position:absolute;
            width:120px;
            height:30px;
            line-height:30px;
            text-align:center;
            background:#D7E7FC;
            border-radius:40px;
            pointer-events: none;
            animation: opac 5s 21s;
            -webkit-animation: opac 5s 21s;  
            & #arrow{
              position:absolute;
              color: #D7E7FC;
              width: 0px;
              height:0px;
              line-height: 0px;
              border-width: 0 15px 20px;
              border-style: solid;
              border-left-color: transparent;
              border-right-color: transparent;
              top: -20px;
              right: 50%;
            }
            & p{
                margin:0;
            }
        }
        &:hover #visit{
            opacity:1;
        }

    }
    & header{
        background rgba(0,0,0,0.3);
        max-width 400px
        display:inline-block;
        vertical-align: middle;
        width:90%;
        position relative
        &:hover{
            background-color rgba(254,254,254,0.3)
        }
        & .header{
            animation: header 1.5s ease;
            -webkit-animation: header 1.5s ease;           
            cursor:pointer;
            display:inline-block;
            font-family: "Microsoft YaHei";
            font-size: 25px;
            font-weight: 900;
            margin: 5px 0 0 0;
            color: #fff;
            letter-spacing: 0;
            border: rgba(34,195,170,.5) 1px solid;
            padding: 2px 30px;
            position:relative;
            overflow:hidden;
            p{
                display:inline-block;
                margin:0;
                mytransition(0.5s)
            }
            p.left{
                mytransform(translateX(-100px))
            }
            p.right{
                mytransform(translateX(100px))
            }
            &:hover p{
                mytransform(translateX(0))
            }

            &::before,&::after{
                -webkit-box-sizing: border-box;
                box-sizing: border-box;
                content: attr(data-text);
                position: absolute;
                width: 100%;
                height: 50%;
                left: 0;
                background: rgba(34,195,170,.3);
                color: #fff;
                overflow: hidden;
                -webkit-transition: -webkit-transform 0.3s;
                transition: transform 0.3s;
                -webkit-transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1);
                transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1);
            }
            &::before{
                top: 0;
                padding-top: 2px;
            }
            &::after{
                bottom:0;
                line-height:0;
            }
            &:hover::before{
                -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
            }
            &:hover::after{
                -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
            }
        }
        & .about {
            opacity:0;
            animation: header 1s 1s ease forwards;
            -webkit-animation: header 1s 1s ease forwards;
            width: 80%;
            display: block;
            margin: 0 auto;
            & div{
                display:inline-block;
                position:relative;
                cursor:pointer;
                display:inline;
                padding: 5px;
                -webkit-border-radius: 0.5em;
                border-radius: 0.5em;
                color: #fff;
                text-indent: 0;
                font-size:18px;
                margin:2px;
                display: inline-block;
                font-weight:bold;
                &::before,&::after{
                    -webkit-box-sizing: border-box;
                    box-sizing: border-box;
                    content: '';
                    border-radius: inherit;
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    z-index: -1;
                    -webkit-transition: -webkit-transform 0.3s, background-color 0.3s;
                    transition: transform 0.3s, background-color 0.3s;
                    -webkit-transition-timing-function: cubic-bezier(0.25, 0, 0.3, 1);
                    transition-timing-function: cubic-bezier(0.25, 0, 0.3, 1);

                }
                &::before{
                    mytransform(scale3d(0.7, 0.7, 1));
                    
                }
                &::after{
                    background: rgba(34,195,170,.3);
                }
                &:hover::before{
                    mytransform(scale3d(1, 1, 1));
                    border: 2px solid rgba(34,195,170,1);
                }
                &:hover::after{
                    background-color: rgba(34,195,170,0.4);
                    mytransform(scale3d(0.7, 0.7, 1));
                }
            }
            & p{
                margin:0;
                &:hover{
                    &:before{
                        opacity:1;
                        margin-bottom:-17px;
                    }
                    &:after{
                        opacity:1;
                        margin-bottom:2px;
                    }
                }
                &:before{
                    content: '';
                    position: absolute;
                    opacity: 0;
                    z-index: 10;
                    mytransition(0.3s ease);
                    pointer-events: none;
                    background: transparent;
                    border: 10px solid transparent;
                    bottom: 100%;
                    left: 20%;
                    margin: 0 0 -18px 0;
                    border-top-color: rgba(0, 0, 0, 0.6);
                }
                &:after{
                    position: absolute;
                    opacity: 0;
                    z-index: 10;
                    mytransition(0.3s ease);
                    pointer-events: none;
                    content: attr(data);
                    background: rgba(0, 0, 0, 0.7);
                    color: white;
                    padding: 8px 10px;
                    font-size: 12px;
                    box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.3);
                    bottom: 100%;
                    left: 20%;
                    margin: 0 0 -6px -10px;
                    width:130px;
            }

        }
        }
        & #link{
            opacity:0;
            width:80%;
            animation: header 1s 1.8s ease forwards;
            -webkit-animation: header 1s 1.8s ease forwards;
            margin: 5px auto;
            & a{
                position:relative;
                font-size:16px;
                display:inline-block;
                color: #EFEFEF;
                margin: 1px;
                font-weight:bold;
                -webkit-border-radius: 50px;
                border-radius: 50px;
                background: rgba(34, 195, 170 , 0.4);
                padding: 5px 7px;
                line-height:1.3rem;
                -webkit-transition:background-color 0.3s, color 0.3s;
                -moz-transition:background-color 0.3s, color 0.3s;
                -ms-transition:background-color 0.3s, color 0.3s;
                -o-transition:background-color 0.3s, color 0.3s;
                transition:background-color 0.3s, color 0.3s;
                &:hover{
                    -webkit-transition: background-color 0.1s 0.3s, color 0.1s 0.3s;
                    transition: background-color 0.1s 0.3s, color 0.1s 0.3s;
                    -webkit-animation: anim 0.3s forwards;
                    animation: anim 0.3s forwards;
                }
                &:before{
                    -webkit-box-sizing: border-box;
                    box-sizing: border-box;
                    content: '';
                    position: absolute;
                    top:-13px;
                    bottom:-13px;
                    left: -13px;
                    right: -13px;
                    background: rgba(34, 195, 170 , 1);
                    border-radius: 50px;
                    z-index: -1;
                    opacity: 0;
                    mytransform(scale3d(0.7, 0.5, 1));
                }
                &:hover::before{
                    opacity:0.8;
                    -webkit-animation: anim2 0.3s 0.3s forwards;
                    animation: anim2 0.3s 0.3s forwards;
                }
            }
        }
    }
}
